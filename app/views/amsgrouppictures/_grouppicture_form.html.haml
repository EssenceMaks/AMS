.currentResumeEditForm
  .col-xs-1.col-md-1
    .btn_back
    = link_to "Back", root_path, class: "btn btn-default"
  .col-xs-10.col-md-10
    .tit_desc_img_block
      = simple_form_for @amsgrouppicture, html: { multipart: true } do |f|
        - if @amsgrouppicture.errors.any?
          #errors
            %p
              = @amsgrouppicture.errors.count
              Prevented this amsstone froms saving
            %ul
              - @amsgrouppicture.errors.full_messages.each do |msg|
                %li= msg
        .panel-body
          = f.input :titlerus, label: 'resume Name', input_html: { title: "NAME of your resume", class: 'form-control'}
         
          = f.input :descriptionrus, label: 'resume Name', input_html: { title: "NAME of your resume", class: 'form-control'}
          
          = f.input :imagegrouppicture, label: 'Attach an image that will be in this resume', input_html: { class: 'form-control'} 

        .sub_button
          = f.button :submit, class: "btn btn-primary sub_button"
        .btn_bottom_back
          = link_to "Back", root_path, class: "btn btn-default btn_bottom_back"
  .col-xs-1.col-md-1